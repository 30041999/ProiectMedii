@page "/{id:int?}"
@model ProiectMedii.Pages.Paintings.IndexModel

@{
    ViewData["Title"] = "Paintings";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].ExhibitionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Exhibition.ExhibitionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].PaintingCategories)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PaintingD.Paintings) {
    string selectedRow = "";
    if (item.ID == Model.PaintingID)
    {
        selectedRow = "table-success";
    }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExhibitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibition.ExhibitionName)
            </td>
            <td>
                @{
                    foreach (var category in item.PaintingCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
